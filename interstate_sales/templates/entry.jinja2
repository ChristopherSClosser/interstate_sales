{% extends 'base.jinja2' %}

{% block content %}

<section class="entry">
  <h3 class="entry-title">Add New Item:</h3>

  <form class="new_entry" method="POST">
  <p>
      <label for="category">Category: </label>
      <input type="text" name="category" value="Enter Main Category:"/>
  </p>
  <p>
      <label for="subcategory">Subcategory: </label>
      <input type="text" name="subcategory" value="Enter Subcategory:"/>
  </p>
  <p>
      <label for="title">Title: </label>
      <input type="text" name="title" value="Enter Title:"/>
  </p>
  <br>
  <p class="text">
      <label for="markdown">Body: </label>
      <textarea type='text' name="markdown">Enter Body:</textarea>
  </p>
  <p class="text">
      <label for="img">Image Name: </label>
      <input type='text' name="img" value="Enter Image File Name:"/>
  </p>
  <p class="text">
      <label for="extra">Extra: </label>
      <textarea type='text' name="extra">Enter Extra Info:</textarea>
  </p>
  <br>
  <p>

        <input type="submit" name="Add Item" />
    
  </p>
  </form>
</section>

{% endblock %}
