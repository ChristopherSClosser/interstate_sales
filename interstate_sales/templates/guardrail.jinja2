{% extends "base.jinja2" %}

{% block content %}

  {% for item in guardrails %}
    <div id="header" style="background-color:white;height:50px;width:980px;float:left;"></div>
    <div id="menu" style="background-color:white;height:300px;width:250px;float:left;">
      <center>
        <img src="{{request.static_url('interstate_sales:static/')}}{{ item.img }}" alt="{{ item.title }}" style="max-height: 150px;">
      </center>
    </div>
    <div id="content" style="background-color:white;height:250px;width:730px;float:left;">
      <center>
        <p></p><h5>{{ item.title }}</h5><br>{{ item.markdown | safe }}<p></p>
      </center>
    </div>
  {% endfor %}

{% endblock content %}
